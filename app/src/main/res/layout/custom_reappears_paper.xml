<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/CardView"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="10dp"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#1d000000"
            android:id="@+id/reappear_sub_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTAM101"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:fontFamily="@font/custom_font"
            android:textStyle="bold"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:background="#d628d6"
            android:textColor="#fff"
            android:id="@+id/reappear_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Electrical And Electronics Engineering (Final)"
            android:layout_below="@+id/reappear_sub_code"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:padding="20dp"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#1d000000"
            android:layout_width="match_parent"
            android:layout_below="@+id/reappear_sub_title"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reappear_download"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:padding="10dp"
                android:src="@drawable/ic_file_download_black_24dp"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/reappear_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="10dp"
                android:src="@drawable/ic_menu_share"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
