<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.android.examscorer.Activity.SearchedResultsActivity">

    <TextView
        android:id="@+id/showingresultsfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_font"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:text="Showing results for "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/showresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showingresultsfor"
        android:layout_toRightOf="@+id/showingresultsfor"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="mst1"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/notes_searched_result"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:text="Note:  AB stands for All Branches"
        android:layout_below="@+id/showresult"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_papers"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="70dp" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/searched_coord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
