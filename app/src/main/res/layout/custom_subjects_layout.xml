<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:theme="@style/CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"

            android:background="@drawable/border_down"
            android:id="@+id/sub_heading"
            android:fontFamily="@font/custom_font"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Engineering Chemistry"/>

        <TextView
            android:id="@+id/sub_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EC"
            android:gravity="center_horizontal"
            android:padding="35dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:background="@drawable/border_up"
            android:id="@+id/sub_code"
            android:textStyle="bold"
            android:fontFamily="@font/custom_font"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTCH101"/>
    </LinearLayout>

</android.support.v7.widget.CardView>