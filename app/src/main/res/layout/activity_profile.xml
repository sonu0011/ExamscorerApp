<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context="sonu.kumar.examscorer.Activity.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/update_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:src="@drawable/profile_log" />
    <EditText
        android:maxLength="20"
        android:padding="11dp"
        android:background="@drawable/edittext_bg"
        android:id="@+id/update_profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/update_profile_image"
        android:layout_margin="20dp"
        android:hint=" Enter your name" />

    <Button
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="@font/custom_font_dark"
        android:textColor="#000"
        android:id="@+id/update_save_changes_btn"
        android:background="@drawable/btn_bg"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_profile_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Update Profile" />




</RelativeLayout>
