<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="sk.android.examscorer.Activity.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/update_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:src="@drawable/profile_log" />

    <TextView
        android:id="@+id/changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_profile_image"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Change Photo"
        android:textColor="#4bb6ef"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/custom_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_below="@+id/changePhoto"/>

    <TextView
        android:id="@+id/changeName"
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changePhoto"
        android:text="Change Your Name"
        android:textColor="#4bb6ef"
        android:layout_marginLeft="20sp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/custom_font" />

    <EditText
        android:id="@+id/update_profile_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:layout_below="@+id/changeName"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Your Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"/>
    <Button
        android:id="@+id/update_save_changes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_profile_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapesignup"
        android:fontFamily="@font/custom_font_dark"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
         />


</RelativeLayout>
